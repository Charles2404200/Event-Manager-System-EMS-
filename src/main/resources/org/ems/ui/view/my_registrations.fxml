<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.ui.controller.MyRegistrationsController"
            prefWidth="1400" prefHeight="900">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Label text="My Registrations" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="View and manage your registered sessions and events" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Search and Filter Section -->
            <HBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-border-radius: 5;">
                <Label text="Search:" style="-fx-font-size: 12;"/>
                <TextField fx:id="searchField" promptText="Search by event, session, venue..." prefWidth="300" style="-fx-padding: 8;"/>

                <Label text="Event:" style="-fx-font-size: 12;"/>
                <ComboBox fx:id="eventFilterCombo" prefWidth="200" style="-fx-padding: 8;"/>

                <Button text="Search" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onSearch"/>
                <Button text="Reset" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onReset"/>
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="View Details" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-background-color: #3498db; -fx-text-fill: white;" onAction="#onViewSessionDetails"/>
                <Button text="Cancel Registration" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #e74c3c;" onAction="#onCancelRegistration"/>
                <Button text="Export Registrations" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onExportRegistrations"/>
            </HBox>

            <!-- Registrations Table -->
            <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 5;">
                <Label text="My Registered Sessions" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5;"/>

                <TableView fx:id="registrationsTable" prefHeight="500">
                    <columns>
                        <TableColumn text="Event" prefWidth="180"/>
                        <TableColumn text="Session" prefWidth="200"/>
                        <TableColumn text="Start Time" prefWidth="150"/>
                        <TableColumn text="End Time" prefWidth="150"/>
                        <TableColumn text="Venue" prefWidth="150"/>
                        <TableColumn text="Capacity" prefWidth="100"/>
                        <TableColumn text="Presenters" prefWidth="150"/>
                    </columns>
                </TableView>

                <Label fx:id="recordCountLabel" text="Total Registrations: 0" style="-fx-padding: 10; -fx-font-size: 11; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Back Button -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="Back to Dashboard" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onBack"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>


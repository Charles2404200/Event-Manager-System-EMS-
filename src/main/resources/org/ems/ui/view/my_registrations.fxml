<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.fxml.com/javafx/21" xmlns:fx="http://javafx.fxml.com/fxml/1"
            fx:controller="org.ems.ui.controller.MyRegistrationsController"
            prefWidth="1400" prefHeight="900"
            style="-fx-font-family: 'Segoe UI'; -fx-font-size: 11;">

    <!-- Top: Title Section -->
    <top>
        <VBox spacing="0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Register for Sessions"
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Select sessions to register for your purchased events"
                   style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <!-- Center: Main Content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Registered Sessions Section -->
            <VBox fx:id="registeredSessionsContainer" spacing="8"
                  style="-fx-border-color: #27ae60; -fx-border-width: 2; -fx-padding: 12; -fx-border-radius: 5; -fx-background-color: #eafaf1;">
                <Label text="Sessions You Have Registered"
                       style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                <!-- Session rows will be added dynamically by controller -->
            </VBox>

            <!-- Event Selection Section -->
            <HBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-border-radius: 5;">
                <Label text="Select Event:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                <ComboBox fx:id="eventCombo" prefWidth="400" style="-fx-padding: 8;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Sessions Container with Loading Placeholder -->
            <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">

                <!-- Loading Placeholder -->
                <VBox fx:id="loadingPlaceholder"
                      style="-fx-alignment: center; -fx-spacing: 15; -fx-padding: 100;"
                      VBox.vgrow="ALWAYS" visible="true">
                    <Label text="Loading sessions..."
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <ProgressBar fx:id="loadingProgressBar" prefWidth="300" prefHeight="25" style="-fx-padding: 5;"/>
                    <Label fx:id="loadingPercentLabel" text="0%"
                           style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                </VBox>

                <!-- Sessions List (Hidden while loading) -->
                <ScrollPane fx:id="sessionsScrollPane" fitToWidth="true"
                           style="-fx-padding: 0; -fx-border: none;" VBox.vgrow="ALWAYS" visible="true" managed="true">
                    <VBox fx:id="sessionsContainer" spacing="0" style="-fx-padding: 0;"/>
                </ScrollPane>

            </VBox>

            <!-- Record Count -->
            <HBox spacing="10">
                <Label fx:id="recordCountLabel" text="Total Sessions: 0"
                       style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

        </VBox>
    </center>

    <!-- Bottom: Info and Action Buttons -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <HBox spacing="10">
                <Button text="â† Back to Dashboard"
                        style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;"
                        onAction="#onBack"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
            <Label text="ðŸ’¡ Tip: Select multiple sessions from the same event. Sessions will be shown after you select an event. Click 'Save Registration' when done."
                   style="-fx-font-size: 10; -fx-text-fill: #666; -fx-wrap-text: true;"/>
        </VBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane fx:controller="org.ems.application.controller.SignupController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4ebf5);">

    <!-- Center everything -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Signup card -->
        <VBox alignment="TOP_CENTER"
              spacing="14"
              prefWidth="420"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-border-radius: 16;
                     -fx-border-color: #dde1e7;
                     -fx-border-width: 1;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 18, 0.2, 0, 4);
                     -fx-padding: 22 26 24 26;">

            <!-- Title area -->
            <VBox alignment="CENTER" spacing="4" style="-fx-padding: 0 0 8 0;">
                <Label text="Event Manager System"
                       style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Create your account"
                       style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Full name -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Full Name"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="fullNameField"
                           promptText="Enter your full name"
                           style="-fx-padding: 8 10 8 10;
                                  -fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ccd1d9;
                                  -fx-font-size: 12;"/>
            </VBox>

            <!-- Email -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Email"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="emailField"
                           promptText="Enter your email"
                           style="-fx-padding: 8 10 8 10;
                                  -fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ccd1d9;
                                  -fx-font-size: 12;"/>
            </VBox>

            <!-- Username -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Username"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="usernameField"
                           promptText="Choose a username"
                           style="-fx-padding: 8 10 8 10;
                                  -fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ccd1d9;
                                  -fx-font-size: 12;"/>
            </VBox>

            <!-- Password -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Password"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <PasswordField fx:id="passwordField"
                               promptText="Enter your password"
                               style="-fx-padding: 8 10 8 10;
                                      -fx-background-radius: 8;
                                      -fx-border-radius: 8;
                                      -fx-border-color: #ccd1d9;
                                      -fx-font-size: 12;"/>
            </VBox>

            <!-- Confirm Password -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Confirm Password"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="Confirm your password"
                               style="-fx-padding: 8 10 8 10;
                                      -fx-background-radius: 8;
                                      -fx-border-radius: 8;
                                      -fx-border-color: #ccd1d9;
                                      -fx-font-size: 12;"/>
            </VBox>

            <!-- Phone -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Phone"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="phoneField"
                           promptText="Enter your phone number"
                           style="-fx-padding: 8 10 8 10;
                                  -fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ccd1d9;
                                  -fx-font-size: 12;"/>
            </VBox>

            <!-- Role -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Role"
                       style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <ComboBox fx:id="roleCombo"
                          prefWidth="Infinity"
                          style="-fx-padding: 4 10 4 10;
                                 -fx-background-radius: 8;
                                 -fx-border-radius: 8;
                                 -fx-border-color: #ccd1d9;
                                 -fx-font-size: 12;"/>
            </VBox>

            <!-- Messages -->
            <VBox alignment="CENTER_LEFT" spacing="2" style="-fx-padding: 4 0 0 0;">
                <Label fx:id="errorLabel"
                       text=""
                       wrapText="true"
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 12;"/>
                <Label fx:id="successLabel"
                       text=""
                       wrapText="true"
                       style="-fx-text-fill: #27ae60; -fx-font-size: 12;"/>
            </VBox>

            <!-- Buttons -->
            <HBox spacing="10"
                  alignment="CENTER"
                  style="-fx-padding: 12 0 0 0;">
                <Button text="Sign Up"
                        onAction="#onSignup"
                        prefWidth="130"
                        style="-fx-padding: 10;
                               -fx-font-size: 13;
                               -fx-font-weight: bold;
                               -fx-background-color: linear-gradient(to right, #27ae60, #2ecc71);
                               -fx-text-fill: white;
                               -fx-background-radius: 20;
                               -fx-cursor: hand;"/>
                <Button text="Back to Home"
                        onAction="#onBackToHome"
                        prefWidth="130"
                        style="-fx-padding: 10;
                               -fx-font-size: 13;
                               -fx-font-weight: bold;
                               -fx-background-color: white;
                               -fx-text-fill: #2c3e50;
                               -fx-border-color: #95a5a6;
                               -fx-border-width: 1;
                               -fx-background-radius: 20;
                               -fx-border-radius: 20;
                               -fx-cursor: hand;"/>
            </HBox>

        </VBox>

    </StackPane>

</AnchorPane>

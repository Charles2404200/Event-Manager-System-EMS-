<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.application.controller.ViewEventsController"
            prefWidth="1400" prefHeight="900">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Label text="Browse Events" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Explore all available events and register for sessions" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Search and Filter Section -->
            <HBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-border-radius: 5;">
                <Label text="Search:" style="-fx-font-size: 12;"/>
                <TextField fx:id="searchField" promptText="Search by event name, location..." prefWidth="300" style="-fx-padding: 8;"/>

                <Label text="Type:" style="-fx-font-size: 12;"/>
                <ComboBox fx:id="typeFilterCombo" prefWidth="150" style="-fx-padding: 8;"/>

                <Label text="Status:" style="-fx-font-size: 12;"/>
                <ComboBox fx:id="statusFilterCombo" prefWidth="150" style="-fx-padding: 8;"/>

                <Button text="ðŸ” Search" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onSearch"/>
                <Button text="â†» Reset" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onReset"/>
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="ðŸ“‹ View Details" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onViewDetails"/>
                <Button text="ðŸŽ« Buy Ticket" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #27ae60;" onAction="#onBuyTicket"/>
                <Button text="ðŸ”— View Sessions" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onViewSessions"/>
            </HBox>

            <!-- Events Table -->
            <VBox fx:id="tableContainer" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                <Label text="Available Events" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5;"/>

                <!-- Loading Progress Placeholder -->
                <VBox fx:id="loadingPlaceholder" style="-fx-alignment: center; -fx-spacing: 15; -fx-padding: 100;" VBox.vgrow="ALWAYS" visible="true">
                    <Label text="Loading events..." style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <ProgressBar fx:id="loadingProgressBar" prefWidth="300" prefHeight="25" style="-fx-padding: 5;"/>
                    <Label fx:id="loadingPercentLabel" text="0%" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                </VBox>

                <!-- Events Table (Hidden while loading) -->
                <TableView fx:id="eventsTable" prefHeight="500" VBox.vgrow="ALWAYS" visible="false" managed="false">
                    <columns>
                        <TableColumn text="ðŸ–¼ï¸  Image" prefWidth="100" sortable="false"/>
                        <TableColumn text="Event Name" prefWidth="180" sortable="true"/>
                        <TableColumn text="Type" prefWidth="110" sortable="true"/>
                        <TableColumn text="Location" prefWidth="140" sortable="true"/>
                        <TableColumn text="Start Date" prefWidth="110" sortable="true"/>
                        <TableColumn text="End Date" prefWidth="110" sortable="true"/>
                        <TableColumn text="Status" prefWidth="90" sortable="true"/>
                        <TableColumn text="Sessions" prefWidth="80" sortable="true"/>
                        <TableColumn text="Registered" prefWidth="90" sortable="true"/>
                    </columns>
                </TableView>

                <!-- Pagination Controls -->
                <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
                    <Button text="â—€ Previous" style="-fx-padding: 8 15;" onAction="#onPreviousPage"/>
                    <Label fx:id="recordCountLabel" text="Total Events: 0" style="-fx-padding: 8; -fx-font-size: 11; -fx-text-fill: #666;"/>
                    <Button text="Next â–¶" style="-fx-padding: 8 15;" onAction="#onNextPage"/>
                </HBox>
            </VBox>

            <!-- Back Button -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="â† Back to Home" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onBack"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.fxml.com/javafx/21" xmlns:fx="http://javafx.fxml.com/fxml/1"
            fx:controller="org.ems.application.controller.MyRegistrationsController"
            style="-fx-font-family: 'Segoe UI'; -fx-font-size: 11;">

    <!-- Top: Title and Back Button -->
    <top>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="â† Back" onAction="#onBack" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-cursor: hand;"/>
                <Label text="Register for Sessions" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>
            <Label text="Select sessions to register for your purchased events"
                   style="-fx-font-size: 11; -fx-text-fill: #666;"/>
        </VBox>
    </top>

    <!-- Center: Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 0;">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Event Selection -->
                <VBox spacing="8">
                    <Label text="Select Event:" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <HBox spacing="10">
                        <ComboBox fx:id="eventCombo" prefWidth="400" style="-fx-font-size: 11;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <!-- Separator -->
                <Separator/>

                <!-- Sessions Container -->
                <VBox fx:id="sessionsContainer" spacing="0" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 3;">
                    <Label text="Select Sessions to Register:"
                           style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 12;"/>
                </VBox>

                <!-- Separator -->
                <Separator/>

                <!-- Record Count -->
                <Label fx:id="recordCountLabel" text="Total Sessions: 0"
                       style="-fx-font-size: 11; -fx-text-fill: #666;"/>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: Info Bar -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <Label text="ðŸ’¡ Tip: You can select multiple sessions from the same event. Click 'Save Registration' when done."
                   style="-fx-font-size: 10; -fx-text-fill: #666; -fx-wrap-text: true;"/>
        </VBox>
    </bottom>

</BorderPane>


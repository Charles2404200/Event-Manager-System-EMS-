<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.ui.controller.ManageUsersController"
            prefWidth="1200" prefHeight="800">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Label text="Manage Users" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="View, create, edit, and delete user accounts" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Search and Filter Section -->
            <HBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-border-radius: 5;">
                <Label text="Search:" style="-fx-font-size: 12;"/>
                <TextField fx:id="searchField" promptText="Search by username, email, name..." prefWidth="300" style="-fx-padding: 8;"/>

                <Label text="Role:" style="-fx-font-size: 12;"/>
                <ComboBox fx:id="roleFilterCombo" prefWidth="150" style="-fx-padding: 8;"/>

                <Button text="ðŸ” Search" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onSearch"/>
                <Button text="â†» Reset" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onReset"/>
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="âž• Add New User" prefWidth="120" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #27ae60;" onAction="#onAddUser"/>
                <Button text="âœï¸ Edit Selected" prefWidth="120" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onEditUser"/>
                <Button text="ðŸ—‘ï¸ Delete Selected" prefWidth="120" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #e74c3c;" onAction="#onDeleteUser"/>
                <Button text="ðŸ“Š Export" prefWidth="100" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onExport"/>
            </HBox>

            <!-- Users Table -->
            <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                <Label text="Users List" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5;"/>

                <!-- Loading Placeholder -->
                <VBox fx:id="loadingPlaceholder" style="-fx-alignment: center; -fx-spacing: 15; -fx-padding: 100;" VBox.vgrow="ALWAYS" visible="true">
                    <Label text="Loading users..." style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <ProgressBar fx:id="loadingProgressBar" prefWidth="300" prefHeight="25" style="-fx-padding: 5;"/>
                    <Label fx:id="loadingPercentLabel" text="0%" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                </VBox>

                <TableView fx:id="usersTable" prefHeight="500" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="ID" prefWidth="200" sortable="true"/>
                        <TableColumn text="Username" prefWidth="120" sortable="true"/>
                        <TableColumn text="Full Name" prefWidth="150" sortable="true"/>
                        <TableColumn text="Email" prefWidth="180" sortable="true"/>
                        <TableColumn text="Phone" prefWidth="120" sortable="true"/>
                        <TableColumn text="Role" prefWidth="120" sortable="true"/>
                        <TableColumn text="Date of Birth" prefWidth="120" sortable="true"/>
                        <TableColumn text="Created Date" prefWidth="150" sortable="true"/>
                    </columns>
                </TableView>

                <Label fx:id="recordCountLabel" text="Total Records: 0" style="-fx-padding: 10; -fx-font-size: 11; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Back Button -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="â† Back to Admin Dashboard" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onBack"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>


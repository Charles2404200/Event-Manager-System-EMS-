<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ems.ui.controller.TicketManagerController">

    <top>
        <ToolBar>
            <Button text="Back" onAction="#backToDashboard"/>
            <Label text="Ticket Manager"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#onRefresh"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="ticketTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="220"/>
                <TableColumn fx:id="colAttendee" text="AttendeeID" prefWidth="220"/>
                <TableColumn fx:id="colEvent" text="EventID" prefWidth="220"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
</BorderPane>

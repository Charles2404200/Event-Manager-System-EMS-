<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ems.ui.controller.EventManagerController">

    <top>
        <ToolBar>
            <Button text="Back" onAction="#backToDashboard"/>
            <Label text="Event Manager"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane Hgrow="ALWAYS"/>
            <Button text="Add Event" onAction="#onAddEvent"/>
            <Button text="Refresh" onAction="#onRefresh"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="eventTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="220"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="150"/>
                <TableColumn fx:id="colLocation" text="Location" prefWidth="200"/>
            </columns>
        </TableView>
    </center>
</BorderPane>

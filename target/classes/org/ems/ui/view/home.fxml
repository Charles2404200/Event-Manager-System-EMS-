<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.ui.controller.HomeController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4ebf5);">

    <!-- TOP: App header -->
    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to right, #1f2a40, #273c75);
                     -fx-padding: 16 24 16 24;">
            <VBox spacing="4">
                <Label text="Event Manager System"
                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label text="Plan, manage, and explore events with ease"
                       style="-fx-font-size: 12; -fx-text-fill: #d0d6e2;"/>
            </VBox>
        </HBox>
    </top>

    <!-- CENTER: Main content -->
    <center>
        <VBox fx:id="centerBox"
              alignment="CENTER"
              spacing="25"
              style="-fx-padding: 30 40 30 40;">

            <!-- Welcome section -->
            <VBox alignment="CENTER" spacing="8">
                <Label fx:id="welcomeLabel"
                       text="Welcome to Event Manager System"
                       style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Label text="Choose an action below to start managing or exploring events"
                       style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Card container -->
            <HBox alignment="CENTER" spacing="20">
                <!-- Left card: Authentication -->
                <VBox spacing="12"
                      prefWidth="320"
                      style="-fx-background-color: white;
                             -fx-background-radius: 14;
                             -fx-border-radius: 14;
                             -fx-border-color: #dde1e7;
                             -fx-border-width: 1;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0.3, 0, 3);
                             -fx-padding: 18;">
                    <Label text="Get Started"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

                    <Label text="Log in to continue managing events, tickets and sessions."
                           wrapText="true"
                           style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>

                    <HBox spacing="10">
                        <Button text="Login"
                                prefWidth="120" prefHeight="40"
                                onAction="#onLogin"
                                style="-fx-background-color: linear-gradient(to right, #2980b9, #3498db);
                                       -fx-text-fill: white;
                                       -fx-font-size: 13;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 20;"/>

                        <Button text="Sign Up"
                                prefWidth="120" prefHeight="40"
                                onAction="#onSignup"
                                style="-fx-background-color: white;
                                       -fx-text-fill: #2980b9;
                                       -fx-border-color: #2980b9;
                                       -fx-border-width: 1;
                                       -fx-font-size: 13;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;"/>
                    </HBox>
                </VBox>

                <!-- Right card: Explore -->
                <VBox spacing="12"
                      prefWidth="380"
                      style="-fx-background-color: white;
                             -fx-background-radius: 14;
                             -fx-border-radius: 14;
                             -fx-border-color: #dde1e7;
                             -fx-border-width: 1;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0.3, 0, 3);
                             -fx-padding: 18;">
                    <Label text="Discover"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

                    <Label text="Browse upcoming events and presenters before logging in."
                           wrapText="true"
                           style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>

                    <HBox spacing="10">
                        <Button text="View Events"
                                prefWidth="150" prefHeight="40"
                                onAction="#onViewEvents"
                                style="-fx-background-color: #ffffff;
                                       -fx-text-fill: #27ae60;
                                       -fx-border-color: #27ae60;
                                       -fx-border-width: 1;
                                       -fx-font-size: 13;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 20;
                                       -fx-border-radius: 20;"/>

                        <Button text="Browse Presenters"
                                prefWidth="170" prefHeight="40"
                                onAction="#onBrowsePresenters"
                                style="-fx-background-color: linear-gradient(to right, #8e44ad, #9b59b6);
                                       -fx-text-fill: white;
                                       -fx-font-size: 13;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 20;"/>
                    </HBox>
                </VBox>
            </HBox>

            <!-- Logout row -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Already signed in?"
                       style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>

                <Button text="Logout"
                        prefWidth="120" prefHeight="34"
                        onAction="#onLogout"
                        style="-fx-background-color: #e74c3c;
                               -fx-text-fill: white;
                               -fx-font-size: 12;
                               -fx-font-weight: bold;
                               -fx-background-radius: 18;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.ui.controller.HomeController"
            prefWidth="1000" prefHeight="700">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Label text="Event Manager System - Home" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label text="Welcome to Event Manager System" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
            <Label text="Please select an option below to get started" style="-fx-font-size: 14; -fx-text-fill: #666;"/>

            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 30;">
                <Button text="Login" prefWidth="150" prefHeight="50" style="-fx-font-size: 14;" onAction="#onLogin"/>
                <Button text="Sign Up" prefWidth="150" prefHeight="50" style="-fx-font-size: 14;" onAction="#onSignup"/>
                <Button text="View Events" prefWidth="150" prefHeight="50" style="-fx-font-size: 14;" onAction="#onViewEvents"/>
                <Button text="Browse Presenters" prefWidth="150" prefHeight="50" style="-fx-font-size: 14;" onAction="#onBrowsePresenters"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>


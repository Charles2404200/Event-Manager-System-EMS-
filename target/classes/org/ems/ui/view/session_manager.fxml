<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.ui.controller.SessionManagerController"
            prefWidth="1400" prefHeight="900">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Label text="Manage Sessions" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Create, edit, and manage event sessions" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>

            <!-- Loading Progress Bar -->
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #34495e; -fx-border-radius: 5;" visible="false" fx:id="loadingContainer">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ProgressBar fx:id="loadingProgressBar" prefWidth="300" visible="false" style="-fx-padding: 2;"/>
                    <Label fx:id="loadingStatusLabel" text="Loading..." style="-fx-text-fill: white; -fx-font-size: 12;" visible="false"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">

            <!-- Sessions Table on Left -->
            <VBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
                <Label text="Sessions List" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5;"/>

                <!-- Action Buttons -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Button text="âž• Add Session" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #27ae60;" onAction="#onAddSession"/>
                    <Button text="âœï¸ Update" prefWidth="100" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onUpdateSession"/>
                    <Button text="ðŸ—‘ï¸ Delete" prefWidth="100" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #e74c3c;" onAction="#onDeleteSession"/>
                    <Button text="â†» Refresh" prefWidth="100" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onRefresh"/>
                    <Button text="ðŸ“ Upload Material" prefWidth="150" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #8e44ad;" onAction="#onUploadMaterial"/>
                </HBox>

                <TableView fx:id="sessionTable" prefHeight="500" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="100" sortable="true"/>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="150" sortable="true"/>
                        <TableColumn fx:id="colEvent" text="Event" prefWidth="150" sortable="true"/>
                        <TableColumn fx:id="colStart" text="Start Date/Time" prefWidth="150" sortable="true"/>
                        <TableColumn fx:id="colVenue" text="Venue" prefWidth="120" sortable="true"/>
                        <TableColumn fx:id="colCapacity" text="Capacity" prefWidth="100" sortable="true"/>
                    </columns>
                </TableView>

                <!-- Pagination + count -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 10 0 10;">
                    <Label fx:id="sessionCountLabel" text="Total Sessions: 0" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Prev" onAction="#onPrevPage"/>
                    <Label fx:id="pageInfoLabel" text="Page 1 / 1" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                    <Button text="Next" onAction="#onNextPage"/>
                </HBox>
            </VBox>

            <!-- Session Details on Right -->
            <VBox spacing="15" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-border-radius: 5;" prefWidth="400">
                <Label text="Session Details" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

                <VBox spacing="8">
                    <Label text="ID:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailIdLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Title:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailTitleLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Description:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailDescLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555; -fx-wrap-text: true;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Start:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailStartLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="End:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailEndLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Venue:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailVenueLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Capacity:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <Label fx:id="detailCapacityLabel" text="-" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
                </VBox>

                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label text="Presenters:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                    <ListView fx:id="presenterListView" prefHeight="150" VBox.vgrow="ALWAYS"/>
                </VBox>

                <Button text="âž• Add Presenter" prefWidth="300" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #3498db;" onAction="#onAddPresenter"/>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox style="-fx-padding: 15;">
            <Button text="â† Back to Admin Dashboard" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#backToDashboard"/>
        </HBox>
    </bottom>

</BorderPane>

    <left>
        <!-- Filter Sidebar -->
        <VBox style="-fx-background-color: #f5f7fa; -fx-border-right: 2 #e0e0e0; -fx-padding: 25;" spacing="20" prefWidth="300">
            <Label text="ðŸ” FILTERS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Search -->
            <VBox spacing="10">
                <Label text="Search Events" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                <TextField fx:id="searchField"
                          promptText="Event name, location..."
                          style="-fx-padding: 12; -fx-font-size: 12; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-border-width: 2; -fx-background-color: white;"/>
            </VBox>

            <!-- Event Type Filter -->
            <VBox spacing="10">
                <Label text="Event Type" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                <ComboBox fx:id="typeFilterCombo"
                         style="-fx-padding: 10; -fx-font-size: 12; -fx-border-radius: 6; -fx-border-width: 2; -fx-border-color: #ddd;"/>
            </VBox>

            <!-- Status Filter -->
            <VBox spacing="10">
                <Label text="Event Status" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                <ComboBox fx:id="statusFilterCombo"
                         style="-fx-padding: 10; -fx-font-size: 12; -fx-border-radius: 6; -fx-border-width: 2; -fx-border-color: #ddd;"/>
            </VBox>

            <!-- Date Range -->

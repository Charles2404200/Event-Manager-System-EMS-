                <Button text="â† Back to Home"
                       prefWidth="250"
                       style="-fx-padding: 12; -fx-font-size: 12; -fx-cursor: hand; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 6; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);"
                       onAction="#onBack"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <!-- Events Grid -->
        <ScrollPane style="-fx-padding: 30; -fx-background-color: #ffffff;" fitToWidth="true">
            <FlowPane fx:id="eventsFlowPane"
                     style="-fx-hgap: 25; -fx-vgap: 25; -fx-padding: 15;"

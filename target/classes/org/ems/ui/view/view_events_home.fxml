            </VBox>

            <VBox spacing="10">
                <Label text="End Date" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                <DatePicker fx:id="endDatePicker"
                           style="-fx-padding: 10; -fx-font-size: 12; -fx-border-radius: 6; -fx-border-width: 2; -fx-border-color: #ddd;"/>
            </VBox>

            <!-- Filter Buttons -->
            <HBox spacing="10" style="-fx-padding-top: 10;">
                <Button text="ðŸ” Filter"
                       prefWidth="140"
                       style="-fx-padding: 12; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #3498db; -fx-border-radius: 6; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);"

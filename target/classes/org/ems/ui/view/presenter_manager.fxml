<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ems.ui.controller.PresenterManagerController"
            prefWidth="1400" prefHeight="900">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Label text="Manage Presenters" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Create, edit, and manage event presenters (Keynote Speaker, Panelist, Moderator, Guest)" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Search and Filter Section -->
            <HBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-border-radius: 5;">
                <Label text="Search:" style="-fx-font-size: 12;"/>
                <TextField fx:id="searchField" promptText="Search by username, name, email..." prefWidth="350" style="-fx-padding: 8;"/>

                <Label text="Type:" style="-fx-font-size: 12;"/>
                <ComboBox fx:id="typeFilterCombo" prefWidth="180" style="-fx-padding: 8;"/>

                <Button text="ðŸ” Search" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onSearch"/>
                <Button text="â†» Reset" style="-fx-padding: 8; -fx-cursor: hand;" onAction="#onReset"/>
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="âž• Create Presenter" prefWidth="150" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #27ae60;" onAction="#onCreatePresenter"/>
                <Button text="âœï¸ Edit Selected" prefWidth="120" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onEditPresenter"/>
                <Button text="ðŸ—‘ï¸ Delete Selected" prefWidth="120" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #e74c3c;" onAction="#onDeletePresenter"/>
                <Button text="ðŸ“‹ View Details" prefWidth="130" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onViewDetails"/>
                <Button text="ðŸ“… Assign Sessions" prefWidth="140" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand; -fx-background-color: #3498db; -fx-text-fill: white;" onAction="#onAssignSessions"/>
            </HBox>

            <!-- Presenters Table -->
            <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                <Label text="Presenters List" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5;"/>

                <TableView fx:id="presentersTable" prefHeight="500" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="ID" prefWidth="180" sortable="true"/>
                        <TableColumn text="Username" prefWidth="130" sortable="true"/>
                        <TableColumn text="Full Name" prefWidth="150" sortable="true"/>
                        <TableColumn text="Type" prefWidth="140" sortable="true"/>
                        <TableColumn text="Email" prefWidth="180" sortable="true"/>
                        <TableColumn text="Phone" prefWidth="130" sortable="true"/>
                        <TableColumn text="Sessions Assigned" prefWidth="140" sortable="true"/>
                    </columns>
                </TableView>

                <Label fx:id="recordCountLabel" text="Total Records: 0" style="-fx-padding: 10; -fx-font-size: 11; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Back Button -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <Button text="â† Back to Admin Dashboard" style="-fx-padding: 10; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onBack"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>


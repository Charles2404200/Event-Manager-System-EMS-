<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane fx:controller="org.ems.ui.controller.LoginController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4ebf5);">

    <!-- Center everything using StackPane -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Login card -->
        <VBox alignment="CENTER"
              spacing="18"
              prefWidth="380"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-border-radius: 16;
                     -fx-border-color: #dde1e7;
                     -fx-border-width: 1;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 18, 0.2, 0, 4);
                     -fx-padding: 24 26 26 26;">

            <!-- App title -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="Event Manager System"
                       style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Sign in to continue"
                       style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Email / Username -->
            <VBox alignment="CENTER_LEFT" spacing="4" style="-fx-padding: 8 0 0 0;">
                <Label text="Email or Username"
                       style="-fx-font-size: 13; -fx-text-fill: #34495e;"/>
                <TextField fx:id="emailField"
                           promptText="Enter your email or username"
                           style="-fx-padding: 8 10 8 10;
                                  -fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ccd1d9;
                                  -fx-font-size: 12;"/>
            </VBox>

            <!-- Password -->
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label text="Password"
                       style="-fx-font-size: 13; -fx-text-fill: #34495e;"/>
                <PasswordField fx:id="passwordField"
                               promptText="Enter your password"
                               style="-fx-padding: 8 10 8 10;
                                      -fx-background-radius: 8;
                                      -fx-border-radius: 8;
                                      -fx-border-color: #ccd1d9;
                                      -fx-font-size: 12;"/>
            </VBox>

            <!-- Error label -->
            <Label fx:id="errorLabel"
                   text=""
                   wrapText="true"
                   style="-fx-text-fill: #e74c3c; -fx-font-size: 12;"/>

            <!-- Login button -->
            <Button text="Login"
                    onAction="#onLogin"
                    maxWidth="Infinity"
                    style="-fx-padding: 10;
                           -fx-font-size: 14;
                           -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to right, #2980b9, #3498db);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;"/>
            <Button text="Sign Up"
                    onAction="#onSignup"
                    maxWidth="Infinity"
                    style="-fx-padding: 10;
                           -fx-font-size: 14;
                           -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to right, #3baf01, #5ddc44);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;"/>
            <Button text="Back to home page"
                    onAction="#onHomepage"
                    maxWidth="-Infinity"
                    style="-fx-padding: 10;
                           -fx-font-size: 14;
                           -fx-font-weight: bold;
                           -fx-background-color: linear-gradient(to right, #dd385c, #db344d);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;"/>

        </VBox>
    </StackPane>

</AnchorPane>
